@model IEnumerable<TicItNow.Web.Models.AnalysisParam>

@{
  ViewBag.Title = "Index";
}

<h2>Analysis Parameters</h2>

<p>
  @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.MinValue)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.MaxValue)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Unit.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Symbol.Name)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.MinValue)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.MaxValue)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Unit.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Symbol.Name)
        </td>
        <td>
          @Html.ActionLink("Edit", "Edit", new { id = item.AnalysisParamId }) |
            @Html.ActionLink("Details", "Details", new { id = item.AnalysisParamId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AnalysisParamId })
        </td>
      </tr>
    }
  </tbody>
</table>
